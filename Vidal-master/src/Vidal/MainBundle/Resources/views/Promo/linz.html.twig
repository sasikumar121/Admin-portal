{% extends 'VidalMainBundle::layout_promo.html.twig' %}


{% block middle %}
	{{ render(controller('VidalMainBundle:Index:Module', {'moduleId':9})) }}
{% endblock %}


{% block stylesheets %}
	{{ parent() }}
	<style>
		.table-wrap {
			max-width:  1000px;
			width:      100%;
			overflow-x: inherit;
		}
		.text a, .text a * {
			color: inherit !important;
			text-decoration: inherit !important;
		}
		/* Author Tokarev Andrey */
		* {
			margin:  0;
			padding: 0;
		}
		.publicity {
			font-family:      Arial, sans-serif;
			background-color: white;
			text-align:       left;
			margin:           0 auto;
			width:            940px;
		}
		.publicity_headder {
			list-style: none;
			position:   relative;
		}
		.main_link {
			position: absolute;
			top:      10px;
			width:    100%;
			height:   490px;
			z-index:  50;
		}
		.publicity_headder_item {
			list-style:     initial;
			vertical-align: top;
			display:        inline-block;
		}
		.publicity_picure {
			padding-left: 20px;
			width:        500px;
		}
		.publicity_info {
			width:        250px;
			padding-left: 10px;
		}
		.publicity_logo {
			height:  90px;
			width:   410px;
			padding: 56px 0 0 35px;
		}
		.publicity_logo_item {
			font-weight: bold;
			display:     inline-block;
			font-size:   16pt;
		}
		.publicity_arrow {
			background:  url("https://www.vidal.ru/bundles/vidalmain/images/promo/linz/arrow.png") no-repeat;
			height:      90px;
			width:       410px;
			padding:     12px 0 0 34px;
			line-height: 1.2;
			font-weight: bold;
			font-size:   13.5pt;
		}
		.publicity_banner {
			background:  url("https://www.vidal.ru/bundles/vidalmain/images/promo/linz/banner.png") no-repeat;
			width:       900px;
			font-size:   12.5pt;
			font-weight: bold;
			padding:     20px;
		}
		.publicity_paragraph {
			text-indent:   20px;
			margin-bottom: 15px;
			margin-top:    8px;
			text-align:    justify;
		}
		ul.list-product {
			list-style-type: none;
			font-size:       0;
			margin-bottom:   60px;
		}
		ul.list-product li {
			font-size:     0;
			margin-bottom: -15px;

		}
		ul.list-product li a {
			text-decoration: none;
			color:           #000000;
		}
		.publicity_body {
			width:      950px;
			list-style: none;
		}
		.publicity_lens_pictures {
			vertical-align: top;
			width:          270px;
			display:        inline-block;
			text-align:     left;
		}
		.publicity_lens_pictures img {
			position: relative;
			left:     -60px;
		}
		.publicity_lens_info {
			text-align:     left;
			vertical-align: top;
			width:          668px;
			font-size:      13pt;
			display:        inline-block;
		}
		.publicity_lens_text {
			margin:              40px 0 0 0;
			padding:             0 0 0 28px;
			text-align:          justify;
			line-height:         1.3;
			background:          url("https://www.vidal.ru/bundles/vidalmain/images/promo/linz/v_line.png") no-repeat;
			background-position: left top;
			display:             inline-block;
			min-height:          185px;
		}
		.publicity_lens_name {
			font-weight: bold;
		}
		#publicity .publicity_link {
			color:           #ff7307 !important;
			text-decoration: none !important;
			font-weight:     bold !important;
			display:         block !important;
			margin-top:      10px !important;
		}
		#publicity .publicity_link:hover {
			text-decoration: none !important;
		}
		#publicity .publicity_logo_link {
			text-decoration: none !important;
			border:          none !important;
		}
		.publicity_footer {
			margin:      20px 0 0 0;
			padding:     20px 0 0 0;
			background:  url("https://www.vidal.ru/bundles/vidalmain/images/promo/linz/g_line.png") right top no-repeat;
			width:       923px;
			font-size:   12.5pt;
			font-weight: bold;
			line-height: 1.3;
		}
		.publicity_footer_paragraph {
			text-align:  left;
			font-size:   15px;
			line-height: 20px;
		}
		.publicity_footer_logo {
			margin:     0 0 0 0;
			text-align: right;
		}
	</style>
{% endblock %}


{% block javascripts %}
	{{ parent() }}
{% endblock %}