{% extends 'VidalMainBundle::layout_promo.html.twig' %}


{% block middle %}
	{% if not app.user %}
	<div class="ask">
		<p><b>Внимание!</b></p>
		<p>
			Этот раздел сайта содержит профессиональную специализированную информацию.<br/>
			Согласно действующему законодательству, материалы этого раздела могут быть
			доступны только для медицинских специалистов.<br/>
			Вы являетесь дипломированным медицинским специалистом и согласны с данным утверждением?
		</p>
		<p>
			<a href="#" class="btn btn-red" id="no">Нет</a>
			<a href="#" class="btn btn-red" id="yes">Да</a>
		</p>
	</div>
	{% endif %}

	<div class="blocks" {% if app.user %}style="display:block"{% endif %}>
		{{ render(controller('VidalMainBundle:Index:Module', {'moduleId':11, 'textMode':false})) }}
	</div>
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	<style>
		/*ВОПРОС*/
		.blocks {
			display: none;
			font-size: 14px;
		}
		.ask {
			display: none;
			padding: 10px;
		}
		.ask a {
			margin-right: 5px;
		}
		.blocks .white {
			color:     white;
		}
		.blocks .violet {
			color: #4a1b81;
		}
		.blocks .blue {
			color: #0b3f78;
		}
		.blocks .blue-light {
			color: #0582bc;
		}
		.blocks img {
			width: 100%;
		}
		sup {
			font-size:   11px;
			margin-left: 2px;
		}
		table.ins {
			margin-top:            36px;
			width:                 100%;
			border-collapse:       collapse;
			border:                3px solid #4a1b81;
			border-radius:         10px;
			-webkit-border-radius: 10px;
			-moz-border-radius:    10px;
			-khtml-border-radius:  10px;
			display:               block;
			color: #0b3f78;
		}
		table.ins td {
			border:     1px solid #ccc;
			padding:    6px 14px;
			text-align: left;
			font-size:  15px;
		}
		table.ins td.top {
			border-top:    none;
			border-bottom: 2px solid #ccc;
		}
		table.ins td.bottom {
			border-bottom: none;
		}
		table.ins td.left {
			border-left: none;
		}
		table.ins td.right {
			border-right: none;
		}
		table.ins tbody {
			width:   100%;
			display: table;
		}
		{% if is_mobile() %}
			.blocks {
				padding: 10px;
			}
		{% endif %}
	</style>
{% endblock %}

{% block javascripts %}
	{{ parent() }}
	<script type="text/javascript">
		$(document).ready(function() {
			$('#no').click(function() {
				window.location = '/';
			});

			$('#yes').click(function() {
				$('.ask').hide();
				$('.blocks').show();
				createCookie('asked', '1', 30);
			});

			if (readCookie('asked') == '1') {
				$('.blocks').show();
			}
			else {
				$('.ask').show();
			}

			function createCookie(name,value,days) {
				var expires = "";
				if (days) {
					var date = new Date();
					date.setTime(date.getTime() + (days*24*60*60*1000));
					expires = "; expires=" + date.toUTCString();
				}
				document.cookie = name + "=" + value + expires + "; path=/";
			}

			function readCookie(name) {
				var nameEQ = name + "=";
				var ca = document.cookie.split(';');
				for(var i=0;i < ca.length;i++) {
					var c = ca[i];
					while (c.charAt(0)==' ') c = c.substring(1,c.length);
					if (c.indexOf(nameEQ) == 0) return c.substring(nameEQ.length,c.length);
				}
				return null;
			}

			function eraseCookie(name) {
				createCookie(name,"",-1);
			}
		});
	</script>
{% endblock %}