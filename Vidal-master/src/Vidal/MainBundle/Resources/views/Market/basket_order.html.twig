{% extends 'VidalMainBundle::layout.html.twig' %}

{% block content %}
	<h1>Корзина - оформление заказа</h1>

	{% if group == 'piluli' %}
		{% include 'VidalMainBundle:Market:apteka_piluli.html.twig' %}
	{% elseif group == 'eapteka' %}
		{% include 'VidalMainBundle:Market:apteka_eapteka.html.twig' %}
	{% elseif group == 'wer' %}
		{% include 'VidalMainBundle:Market:apteka_wer.html.twig' %}
	{% else %}
		{% include 'VidalMainBundle:Market:apteka_zdravzona.html.twig' %}
	{% endif %}

	<form method="POST">
		{{ form_widget(form) }}
	</form>

{% endblock %}

{% block javascripts %}
	{{ parent() }}
	<script src="{{ asset("bundles/vidalmain/jquery-chosen/chosen.jquery.min.js") }}" type="text/javascript"></script>
	<script>
		$(document).ready(function() {
			$(".delivery-select").chosen({
				disable_search_threshold: 10,
				no_results_text:          "Поиск не нашел ничего",
				disable_search:           true
			});
		})
	</script>
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	<link type="text/css" rel="stylesheet" href="{{ asset('bundles/vidalmain/stylesheets/market.css') }}"/>
	<style type="text/css">
		.market-table {
			margin-bottom: 20px;
		}
	</style>
{% endblock %}