{% extends 'VidalMainBundle::layout.html.twig' %}


{% block content %}
	<div class="auth-required">
		<div class="ar1">
			Вы запросили файл <span>{{ filename }}</span>,
			который доступен только зарегистрированным пользователям
		</div>
		<div class="ar2">
			Для доступа <a href="#username" id="goto-auth">авторизуйтесь</a> или
			<a href="{{ path('registration') }}">зарегистрируйтесь</a>.
		</div>
	</div>
{% endblock %}


{% block stylesheets %}
	{{ parent() }}
	<style type="text/css">
		.auth-required {
			width:       450px;
			margin:      40px auto 0;
			text-align:  center;
			font-weight: bold;
			font-size:   16px;
			color:       #2f4053;
		}
		.auth-required a {
			text-decoration: none;
		}
		.auth-required a:hover {
			text-decoration: underline;
		}
		.ar1 {
			margin-bottom: 24px;
		}
		.ar1 span {
			color: maroon;
		}
	</style>
{% endblock %}


{% block javascripts %}
	{{ parent() }}
	<script type="text/javascript">
		$(document).ready(function() {
			$('#goto-auth').click(function() {
				$('#username').focus();
			});
		});
	</script>
{% endblock %}